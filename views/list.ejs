<%- include('header'); -%>
<div class="box" id="heading">
      <h1><%= listTitle %></h1>
    </div>

    <div class="box">
      <ul>
        <% for (let i=0; i < newListItems.length; i++){ %>
        <div class="item">
          <input type="checkbox" />
          <p><%= newListItems[i] %></p>
        </div>

        <% } %>

        <form action="/" method="POST" class="item">
          <input
            type="text"
            name="newItem"
            placeholder="Add"
            autocomplete="off"
          />
          <button type="submit" name="list" value=<%= listTitle %>>+</button>
        </form>
      </ul>
    </div>
<%- include('footer'); -%>
